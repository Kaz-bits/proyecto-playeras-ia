# Configuración del Servidor
NODE_ENV=development
PORT=5000

# Base de Datos MongoDB
MONGODB_URI=mongodb://localhost:27017/playeras-ia

# JWT Configuration
JWT_SECRET=tu_jwt_secret_key_super_segura_aqui
JWT_EXPIRE=7d

# APIs de Inteligencia Artificial
# Gemini AI (Google)
GEMINI_API_KEY=tu_gemini_api_key_aqui

# Midjourney API
MIDJOURNEY_API_KEY=tu_midjourney_api_key_aqui

# OpenAI (DALL-E)
OPENAI_API_KEY=tu_openai_api_key_aqui

# Cloudinary (para almacenar imágenes)
CLOUDINARY_CLOUD_NAME=tu_cloudinary_cloud_name
CLOUDINARY_API_KEY=tu_cloudinary_api_key
CLOUDINARY_API_SECRET=tu_cloudinary_api_secret

# Stripe (pagos)
STRIPE_PUBLISHABLE_KEY=pk_test_tu_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_tu_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_tu_stripe_webhook_secret

# PayPal (pagos alternativos)
PAYPAL_CLIENT_ID=tu_paypal_client_id
PAYPAL_CLIENT_SECRET=tu_paypal_client_secret

# Email (notificaciones)
EMAIL_SERVICE=gmail
EMAIL_USER=tu_email@gmail.com
EMAIL_PASSWORD=tu_app_password

# AWS S3 (almacenamiento alternativo)
AWS_ACCESS_KEY_ID=tu_aws_access_key
AWS_SECRET_ACCESS_KEY=tu_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=tu-bucket-name

# Configuración de Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Configuración de CORS
CORS_ORIGIN=http://localhost:3000

# Configuración de Moderación
MODERATION_AUTO_APPROVE=false
MODERATION_WEBHOOK_URL=https://tu-webhook-de-moderacion.com

# Configuración de Analytics
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
MIXPANEL_TOKEN=tu_mixpanel_token

# Configuración de Logs
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Configuración de Redis (cache)
REDIS_URL=redis://localhost:6379

# Configuración de la aplicación
APP_NAME=Playeras IA
APP_URL=http://localhost:3000
ADMIN_EMAIL=admin@tu-dominio.com

# Configuración de T-shirts
DEFAULT_SHIRT_PRICE=15.99
SHIPPING_COST=5.99

# Configuración de límites de usuario
FREE_TIER_DAILY_DESIGNS=5
PREMIUM_TIER_DAILY_DESIGNS=50
FREE_TIER_DAILY_BATTLES=3
PREMIUM_TIER_DAILY_BATTLES=25

# Configuración de webhooks
WEBHOOK_SECRET=tu_webhook_secret_para_verificacion

# Configuración de desarrollo
DEBUG=true
ENABLE_SWAGGER=true
