{
  "buildCommand": "cd client && npm install && npm run build",
  "outputDirectory": "client/.next",
  "installCommand": "cd client && npm install",
  "framework": "nextjs",
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://your-backend-url.com/api/:path*"
    }
  ],
  "env": {
    "NEXT_PUBLIC_API_URL": "@api_url"
  }
}